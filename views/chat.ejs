<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VisionBot AI</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        body {
            margin: 0;
            background: #1a1a2e;
            font-family: 'Poppins', sans-serif;
            color: white;
            height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Navbar compacta */
        .navbar {
            background: #16213e;
            padding: 10px 20px;
            display: flex;
            align-items: center;
            border-bottom: 2px solid #e94560;
        }
        .back-btn {
            color: white;
            text-decoration: none;
            margin-right: 15px;
            font-size: 1.2rem;
        }
        .ai-status {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .status-dot {
            width: 10px; height: 10px;
            background: #4ecca3;
            border-radius: 50%;
            box-shadow: 0 0 10px #4ecca3;
        }

        /* Area del Chat */
        .chat-area {
            flex-grow: 1;
            padding: 20px;
            overflow-y: auto;
            background-image: radial-gradient(#24243e 1px, transparent 1px);
            background-size: 20px 20px; /* Patr√≥n de puntos sutil */
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .message {
            max-width: 75%;
            padding: 15px 20px;
            border-radius: 15px;
            position: relative;
            line-height: 1.5;
            font-size: 0.95rem;
            animation: popIn 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }

        /* Bot (Izquierda) */
        .msg-bot {
            align-self: flex-start;
            background: #16213e;
            border: 1px solid #444;
            color: #e0e0e0;
            border-bottom-left-radius: 2px;
        }
        .msg-bot::before {
            content: '\f544'; /* Icono Robot FontAwesome */
            font-family: 'Font Awesome 6 Free';
            font-weight: 900;
            position: absolute;
            top: -25px; left: 0;
            color: #e94560;
            font-size: 1.2rem;
        }

        /* Usuario (Derecha) */
        .msg-user {
            align-self: flex-end;
            background: linear-gradient(135deg, #e94560, #c0354e);
            color: white;
            border-bottom-right-radius: 2px;
            box-shadow: 0 5px 15px rgba(233, 69, 96, 0.3);
        }

        /* Input Area */
        .input-zone {
            padding: 20px;
            background: #16213e;
            display: flex;
            gap: 10px;
            align-items: center;
        }

        input {
            flex-grow: 1;
            padding: 15px;
            border-radius: 30px;
            border: 1px solid #444;
            background: #0f3460;
            color: white;
            outline: none;
            transition: 0.3s;
        }
        input:focus {
            border-color: #e94560;
            box-shadow: 0 0 10px rgba(233, 69, 96, 0.2);
        }

        button {
            background: #e94560;
            border: none;
            width: 50px; height: 50px;
            border-radius: 50%;
            color: white;
            cursor: pointer;
            font-size: 1.2rem;
            transition: transform 0.2s;
            display: flex; 
            align-items: center; 
            justify-content: center;
        }
        button:hover { transform: scale(1.1); }
        button:disabled { background: #555; transform: none; }

        /* Animaci√≥n de carga */
        .typing {
            font-size: 0.8rem;
            color: #aaa;
            margin-left: 10px;
            display: none;
        }
        .typing span { animation: blink 1.4s infinite both; }
        .typing span:nth-child(2) { animation-delay: 0.2s; }
        .typing span:nth-child(3) { animation-delay: 0.4s; }

        @keyframes popIn { from { transform: scale(0.8); opacity: 0; } to { transform: scale(1); opacity: 1; } }
        @keyframes blink { 0% { opacity: 0.2; } 20% { opacity: 1; } 100% { opacity: 0.2; } }
    </style>
</head>
<body>

    <nav class="navbar">
        <a href="/tienda" class="back-btn"><i class="fas fa-arrow-left"></i></a>
        <div class="ai-status">
            <span class="status-dot"></span>
            <div style="font-weight: bold;">VisionBot AI</div>
        </div>
    </nav>

    <div class="chat-area" id="chat-box">
        <div class="message msg-bot">
            ¬°Hola! Soy tu asistente de IA. ü§ñ<br>Preg√∫ntame sobre especificaciones de productos o recomendaciones.
        </div>
    </div>

    <div class="typing" id="typing-indicator">
        VisionBot est√° escribiendo<span>.</span><span>.</span><span>.</span>
    </div>

    <div class="input-zone">
        <input type="text" id="user-input" placeholder="Escribe tu mensaje..." onkeypress="handleEnter(event)">
        <button id="send-btn" onclick="sendMessage()"><i class="fas fa-paper-plane"></i></button>
    </div>

    <script>
        const chatBox = document.getElementById('chat-box');
        const userInput = document.getElementById('user-input');
        const sendBtn = document.getElementById('send-btn');
        const typing = document.getElementById('typing-indicator');

        function handleEnter(e) { if (e.key === 'Enter') sendMessage(); }

        async function sendMessage() {
            const text = userInput.value.trim();
            if (!text) return;

            // UI Usuario
            addMessage(text, 'user');
            userInput.value = '';
            setLoading(true);

            try {
                const response = await fetch('/chat', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ mensaje: text })
                });
                const data = await response.json();
                
                // UI Bot
                if (data.analisis) addMessage(data.analisis, 'bot');
                else addMessage("Error de conexi√≥n.", 'bot');

            } catch (error) {
                addMessage("Error cr√≠tico.", 'bot');
            } finally {
                setLoading(false);
                userInput.focus();
            }
        }

        function addMessage(text, type) {
            const div = document.createElement('div');
            div.classList.add('message', type === 'user' ? 'msg-user' : 'msg-bot');
            
            // Formato b√°sico para el bot
            if (type === 'bot') {
                div.innerHTML = text.replace(/\*\*(.*?)\*\*/g, '<b>$1</b>').replace(/\n/g, '<br>');
            } else {
                div.textContent = text;
            }
            
            chatBox.appendChild(div);
            chatBox.scrollTop = chatBox.scrollHeight;
        }

        function setLoading(isLoading) {
            userInput.disabled = isLoading;
            sendBtn.disabled = isLoading;
            typing.style.display = isLoading ? 'block' : 'none';
        }
    </script>
</body>
</html>